<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginStartFragment">

    <!-- loginStartFragment -->
    <fragment
        android:id="@+id/loginStartFragment"
        android:name="com.example.onfit.KakaoLogin.fragment.LoginStartFragment"
        android:label="로그인 시작"
        tools:layout="@layout/fragment_login_start">

        <action
            android:id="@+id/action_loginStartFragment_to_loginFragment"
            app:destination="@id/loginFragment" />

        <action
            android:id="@+id/action_loginStartFragment_to_homeFragment"
            app:destination="@id/homeFragment" />

        <action
            android:id="@+id/action_loginStartFragment_to_nicknameFragment"
            app:destination="@id/nicknameFragment" />

        <action
            android:id="@+id/action_loginStartFragment_to_locationSettingFragment"
            app:destination="@id/locationSettingFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.onfit.KakaoLogin.fragment.LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_termsFragment"
            app:destination="@id/termsFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_nicknameFragment"
            app:destination="@id/nicknameFragment" />
    </fragment>

    <fragment
        android:id="@+id/termsFragment"
        android:name="com.example.onfit.KakaoLogin.fragment.TermsFragment"
        android:label="약관 동의"
        tools:layout="@layout/fragment_terms">
        <action
            android:id="@+id/action_termsFragment_to_nicknameFragment"
            app:destination="@id/nicknameFragment" />
    </fragment>

    <fragment
        android:id="@+id/nicknameFragment"
        android:name="com.example.onfit.KakaoLogin.fragment.NicknameFragment"
        android:label="닉네임 설정"
        tools:layout="@layout/fragment_nickname">
        <action
            android:id="@+id/action_nicknameFragment_to_locationSettingFragment"
            app:destination="@id/locationSettingFragment" />
    </fragment>

    <fragment
        android:id="@+id/locationSettingFragment"
        android:name="com.example.onfit.KakaoLogin.fragment.LocationSettingFragment"
        android:label="위치 설정"
        tools:layout="@layout/fragment_location_setting">
        <argument
            android:name="fromHome"
            app:argType="boolean"
            android:defaultValue="false" />
        <action
            android:id="@+id/action_locationSettingFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.onfit.Home.HomeFragment"
        android:label="홈"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_locationSettingFragment"
            app:destination="@id/locationSettingFragment">
            <argument
                android:name="fromHome"
                app:argType="boolean" />
        </action>
        <action
            android:id="@+id/action_homeFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <!-- 홈 → 마이페이지 이동 액션 추가 -->
        <action
            android:id="@+id/action_homeFragment_to_myPageFragment"
            app:destination="@id/myPageFragment" />
        <action
            android:id="@+id/action_calendarFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>

    <!-- 마이페이지 Destination 추가 -->
    <fragment
        android:id="@+id/myPageFragment"
        android:name="com.example.onfit.MyPageFragment"
        android:label="마이페이지"
        tools:layout="@layout/fragment_my_page" />

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.onfit.HomeRegister.fragment.RegisterFragment"
        android:label="registerFragment">
        <action
            android:id="@+id/action_registerFragment_to_saveFragment"
            app:destination="@id/saveFragment"/>
    </fragment>

    <fragment
        android:id="@+id/saveFragment"
        android:name="com.example.onfit.HomeRegister.fragment.SaveFragment"
        android:label="homeFragment">
        <action
            android:id="@+id/action_saveFragment_to_outfitRegisterFragment"
            app:destination="@id/outfitRegisterFragment" >
            <argument
                android:name="saveDate"
                app:argType="string"
                app:nullable="true" />
            <argument
                android:name="outfit_id"
                app:argType="string"/>
        </action>
    </fragment>

    <fragment
        android:id="@+id/outfitRegisterFragment"
        android:name="com.example.onfit.HomeRegister.fragment.OutfitRegisterFragment"
        android:label="outfitRegisterFragment">
        <action
            android:id="@+id/action_outfitRegisterFragment_to_outfitSelectFragment"
            app:destination="@id/outfitSelectFragment"/>
        <action
            android:id="@+id/action_outfitRegisterFragment_to_outfitCropFragment"
            app:destination="@id/outfitCropFragment"/>
        <action
            android:id="@+id/action_outfitRegisterFragment_to_outfitSaveFragment"
            app:destination="@id/outfitSaveFragment">
            <argument
                android:name="imageUris"
                app:argType="string[]" />
            <argument
                android:name="imageResIds"
                app:argType="integer[]" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/outfitSelectFragment"
        android:name="com.example.onfit.HomeRegister.fragment.OutfitSelectFragment"
        android:label="outfitSelectFragment" >
        <argument
            android:name="imageSource"
            app:argType="string"
            app:nullable="true"/>
        <argument
            android:name="itemPosition"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/outfitCropFragment"
        android:name="com.example.onfit.HomeRegister.fragment.OutfitCropFragment"
        android:label="outfitCropFragment" >
        <argument
            android:name="outfit_image_path"
            app:argType="string"/>
        <argument
            android:name="itemPosition"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>

    <fragment
        android:id="@+id/outfitSaveFragment"
        android:name="com.example.onfit.HomeRegister.fragment.OutfitSaveFragment"
        android:label="outfitSaveFragment" >
        <argument
                android:name="save_date"
                app:argType="string"/>
        <action
            android:id="@+id/action_outfitSaveFragment_to_wardrobeFragment"
            app:destination="@id/wardrobeFragment" />
    </fragment>

    <fragment
        android:id="@+id/wardrobeFragment"
        android:name="com.example.onfit.Wardrobe.fragment.WardrobeFragment"
        android:label="옷장">
        <action
            android:id="@+id/action_wardrobeFragment_to_addItemFragment"
            app:destination="@id/addItemFragment" />
    </fragment>

    <fragment
        android:id="@+id/wardrobeSearchFragment"
        android:name="com.example.onfit.Wardrobe.fragment.WardrobeSearchFragment"
        android:label="검색"
        tools:layout="@layout/fragment_wardrobe_search" />

    <fragment
        android:id="@+id/clothesDetailFragment"
        android:name="com.example.onfit.Wardrobe.fragment.ClothesDetailFragment"
        android:label="의상 상세"
        tools:layout="@layout/fragment_clothes_detail">
        <argument
            android:name="image_res_id"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_clothesDetailFragment_to_addItemFragment"
            app:destination="@id/addItemFragment" />
    </fragment>

    <fragment
        android:id="@+id/addItemFragment"
        android:name="com.example.onfit.Wardrobe.fragment.AddItemFragment"
        android:label="아이템 추가"
        tools:layout="@layout/fragment_add_item">
        <argument
            android:name="edit_mode"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="image_res_id"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>

    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.example.onfit.calendar.fragment.CalendarFragment"
        android:label="캘린더"
        tools:layout="@layout/fragment_calendar">
        <action
            android:id="@+id/action_calendarFragment_to_calendarSaveFragment"
            app:destination="@id/calendarSaveFragment"/>
        <action
            android:id="@+id/action_calendarFragment_to_registerFragment"
            app:destination="@id/registerFragment"/>
    </fragment>

    <fragment
        android:id="@+id/calendarSaveFragment"
        android:name="com.example.onfit.CalendarSaveFragment"
        android:label="캘린더 저장"
        tools:layout="@layout/fragment_calendar_save">

        <argument
            android:name="selectedDate"
            app:argType="string" />
        <argument android:name="mainImageUrl" app:argType="string" app:nullable="true" />
        <argument
            android:name="outfitId"
            app:argType="integer"
            android:defaultValue="-1" />
        <argument
            android:name="memo"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="image_url"
            app:argType="string"
            android:defaultValue="" />
        <action
            android:id="@+id/action_calendarSaveFragment_to_calendarRewriteFragment"
            app:destination="@id/calendarRewriteFragment"/>
    </fragment>

    <fragment
        android:id="@+id/calendarRewriteFragment"
        android:name="com.example.onfit.CalendarRewriteFragment"
        android:label="아웃핏 상세화면 수정">
        <action
            android:id="@+id/action_calendarRewriteFragment_to_calendarSelectFragment"
            app:destination="@id/calendarSelectFragment" />
        <argument android:name="selectedDate"  app:argType="string"  app:nullable="true"/>
        <argument android:name="mainImageUrl"  app:argType="string"  app:nullable="true"/>
        <argument android:name="itemImageUrls" app:argType="string[]" app:nullable="true"/>
        <argument android:name="weatherText"   app:argType="string"  app:nullable="true"/>
        <argument android:name="memoText"      app:argType="string"  app:nullable="true"/>
    </fragment>

    <fragment
        android:id="@+id/calendarSelectFragment"
        android:name="com.example.onfit.CalendarSelectFragment"
        android:label="옷장 아이템 선택 화면" >
        <argument
            android:name="imageSource"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/styleOutfitsFragment"
        android:name="com.example.onfit.StyleOutfitsFragment"
        android:label="스타일별 Outfit"
        tools:layout="@layout/fragment_style_outfits" />

    <fragment
        android:id="@+id/communityFragment"
        android:name="com.example.onfit.Community.fragment.CommunityFragment"
        android:label="커뮤니티"
        tools:layout="@layout/fragment_community">
        <action
            android:id="@+id/action_communityFragment_to_communityDetailFragment"
            app:destination="@id/communityDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/communityDetailFragment"
        android:name="com.example.onfit.Community.fragment.CommunityDetailFragment"
        android:label="CommunityDetailFragment">
        <argument
            android:name="outfitId"
            app:argType="integer"
            android:defaultValue="-1" />
        <argument
            android:name="imageUrl"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <!-- 글로벌 홈 이동 -->
    <action
        android:id="@+id/action_global_homeFragment"
        app:destination="@id/homeFragment"
        app:popUpTo="@id/homeFragment"
        app:popUpToInclusive="true"
        app:launchSingleTop="true" />

    <!-- 글로벌 마이페이지 이동(필요 시 어디서든 사용) -->
    <action
        android:id="@+id/action_global_myPageFragment"
        app:destination="@id/myPageFragment"
        app:launchSingleTop="true" />

    <fragment
        android:id="@+id/termsDetailFragment"
        android:name="com.example.onfit.KakaoLogin.fragment.TermsDetailFragment"
        android:label="약관 상세"
        tools:layout="@layout/fragment_terms_detail" />

    <action
        android:id="@+id/action_termsFragment_to_termsDetailFragment_service"
        app:destination="@id/termsDetailFragment"
        app:enterAnim="@anim/slide_in_from_top"
        app:exitAnim="@anim/slide_out_to_top">
        <argument
            android:name="type"
            app:argType="string"
            android:defaultValue="service" />
    </action>

    <action
        android:id="@+id/action_termsFragment_to_termsDetailFragment_policy"
        app:destination="@id/termsDetailFragment"
        app:enterAnim="@anim/slide_in_from_top"
        app:exitAnim="@anim/slide_out_to_top">
        <argument
            android:name="type"
            app:argType="string"
            android:defaultValue="policy" />
    </action>

</navigation>
