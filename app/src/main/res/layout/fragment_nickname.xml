<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- 뒤로가기 버튼 -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 닉네임 제목 -->
    <TextView
        android:id="@+id/tvNicknameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp" />

    <!-- 닉네임 입력 + 중복확인 버튼 -->
    <LinearLayout
        android:id="@+id/nicknameInputLayout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/edittext_background"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvNicknameTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/etNickname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="닉네임을 입력해주세요"
            android:maxLength="10"
            android:background="@android:color/transparent"
            android:textSize="14sp"
            android:inputType="text" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCheckNickname"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="중복확인"
            android:textSize="12sp"
            android:background="@drawable/btn_next_background"
            android:textColor="@android:color/white"
            android:enabled="false" />



    </LinearLayout>

    <!-- 유효성 조건 안내 -->
    <TextView
        android:id="@+id/tvNicknameGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* 2자~10자, 한글/영어/숫자만 사용 가능"
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/nicknameInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp" />

    <!-- 가입하기 버튼 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="가입하기"
        android:enabled="false"
        android:background="@drawable/btn_next_background"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/tvNicknameGuide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="40dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
