<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- 위치 권한 요청 버튼 -->
    <Button
        android:id="@+id/btnRequestPermission"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="위치 권한 요청"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 위치 검색 입력창 -->
    <EditText
        android:id="@+id/editSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="동/읍/면 입력"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnRequestPermission"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 🔽 자동 검색 버튼 추가 -->
    <Button
        android:id="@+id/btnAutoSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자동 검색"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/editSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 위치 결과 리스트 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerLocationResults"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnAutoSearch"
        app:layout_constraintBottom_toTopOf="@+id/btnSaveLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 저장 버튼 -->
    <Button
        android:id="@+id/btnSaveLocation"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="저장"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>
