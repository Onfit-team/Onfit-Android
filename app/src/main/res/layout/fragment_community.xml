<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FAFAFA">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="20dp"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/yesterday_best_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="어제 가장 인기 있었던 Outfit TOP3"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#111111"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 빈 상태 안내 -->
        <TextView
            android:id="@+id/yesterday_best_empty_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="어제의 BEST 데이터가 없습니다."
            android:textSize="14sp"
            android:textColor="#777777"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/yesterday_best_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"/>

        <!-- TOP3 가로 카드 -->
        <LinearLayout
            android:id="@+id/yesterday_best_linearlayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/yesterday_best_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 1위 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="6dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/yesterday_best1_iv"
                    android:layout_width="match_parent"
                    android:layout_height="164dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/RoundedImageView"
                    app:strokeColor="#1A000000"
                    app:strokeWidth="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOP 1"
                    android:textColor="#0A84FF"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/yesterday_best1_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- 2위 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="6dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/yesterday_best2_iv"
                    android:layout_width="match_parent"
                    android:layout_height="164dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/RoundedImageView"
                    app:strokeColor="#1A000000"
                    app:strokeWidth="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOP 2"
                    android:textColor="#0A84FF"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/yesterday_best2_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- 3위 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/yesterday_best3_iv"
                    android:layout_width="match_parent"
                    android:layout_height="164dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/RoundedImageView"
                    app:strokeColor="#1A000000"
                    app:strokeWidth="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOP 3"
                    android:textColor="#0A84FF"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/yesterday_best3_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- BEST 섹션 하단 기준점 -->
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/yesterday_best_section_bottom_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="yesterday_best_empty_tv,yesterday_best_linearlayout" />

        <!-- 날짜/안내 -->
        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5월 5일"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#111111"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/yesterday_best_section_bottom_barrier"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=", 다양한 Outfit을 만나보세요!"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#111111"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/yesterday_best_section_bottom_barrier"
            app:layout_constraintStart_toEndOf="@id/date_tv" />

        <!-- Outfit 공유 버튼 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/share_outfit_ib"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:text="Outfit 공유하기"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:background="@drawable/rounded_blue_button"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/date_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 🔎 검색 아이콘 -->
        <ImageButton
            android:id="@+id/search_icon_iv"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="14dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_search_default"
            android:contentDescription="검색 아이콘"
            app:layout_constraintTop_toBottomOf="@id/share_outfit_ib"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 정렬 / 필터 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sort_filter_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/search_icon_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/sort_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최신등록순"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#111111"
                android:drawableEnd="@drawable/arrowdown"
                android:drawablePadding="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/weather_filter_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나와 비슷한 날씨만"
                android:textSize="14sp"
                android:textColor="#666666"
                android:drawableEnd="@drawable/check"
                android:drawablePadding="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 2열 그리드 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/style_grid_recyclerview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingBottom="12dp"
            app:layout_constraintTop_toBottomOf="@id/sort_filter_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
