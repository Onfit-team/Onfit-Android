<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- 어제의 BEST Outfit 제목 -->
        <TextView
            android:id="@+id/yesterday_best_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="어제 가장 인기 있었던 Outfit TOP3"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 빈 상태 안내 텍스트 -->
        <TextView
            android:id="@+id/yesterday_best_empty_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="어제의 BEST 데이터가 없습니다."
            android:textSize="14sp"
            android:textColor="#777777"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/yesterday_best_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 상단 TOP3 섹션(이미지 3칸) -->
        <LinearLayout
            android:id="@+id/yesterday_best_linearlayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/yesterday_best_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- TOP 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="4dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/yesterday_best1_iv"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/RoundedImageView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOP 1"
                    android:textColor="#007AFF"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/yesterday_best1_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- TOP 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="4dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/yesterday_best2_iv"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/RoundedImageView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOP 2"
                    android:textColor="#007AFF"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/yesterday_best2_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- TOP 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/yesterday_best3_iv"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/RoundedImageView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOP 3"
                    android:textColor="#007AFF"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/yesterday_best3_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Barrier -->
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/yesterday_best_section_bottom_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="yesterday_best_empty_tv,yesterday_best_linearlayout" />

        <!-- 날짜 + 안내 : 이제 Barrier 아래로 배치 -->
        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5월 5일"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/yesterday_best_section_bottom_barrier"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=", 다양한 Outfit을 만나보세요!"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/yesterday_best_section_bottom_barrier"
            app:layout_constraintStart_toEndOf="@id/date_tv" />

        <!-- Outfit 공유 버튼, 검색바/정렬/리사이클러뷰는 기존과 동일 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/share_outfit_ib"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Outfit 공유하기"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="@drawable/rounded_blue_button"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/date_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 검색 바 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/searchBarContainer"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_search_background"
            app:layout_constraintTop_toBottomOf="@id/share_outfit_ib"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/search_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="40dp"
                android:background="@android:color/transparent"
                android:hint="검색"
                android:textSize="10sp"
                android:inputType="text"
                android:singleLine="true" />

            <ImageButton
                android:id="@+id/search_icon_iv"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/search"
                android:contentDescription="검색 아이콘"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 정렬/필터 영역 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sort_filter_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/searchBarContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/sort_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최신등록순"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#000000"
                android:drawableEnd="@drawable/arrowdown"
                android:drawablePadding="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/weather_filter_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나와 비슷한 날씨만"
                android:textSize="13sp"
                android:textColor="#888888"
                android:drawableEnd="@drawable/check"
                android:drawablePadding="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 2열 그리드 RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/style_grid_recyclerview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@id/sort_filter_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
