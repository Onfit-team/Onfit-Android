<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 뒤로가기 + 날짜 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/back_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/backarrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025.04.29"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/back_iv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/delete_iv" />

            <ImageView
                android:id="@+id/delete_iv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/deletebtn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- 메인 이미지 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_marginTop="12dp">

            <!-- 배경 이미지 -->
            <ImageView
                android:id="@+id/main_iv"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:scaleType="centerCrop"
                android:src="@drawable/communitycloth1"
                android:background="@drawable/rounded_image_background"
                android:clipToOutline="true"
                android:outlineProvider="background" />

            <!-- 좋아요 수 -->
            <TextView
                android:id="@+id/likes_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="♥ 128"
                android:textColor="#888888"
                android:textSize="13sp"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:background="@android:color/transparent"/>
        </FrameLayout>


        <!-- 착장 아이템 RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cloth_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:overScrollMode="never"
            android:clipToPadding="false"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"/>

        <!-- 날씨 정보 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/temp_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌤 18.5°C"
                android:textSize="14sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/weather_text_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="쾌청"
                android:layout_marginStart="8dp"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- 설명 -->
        <TextView
            android:id="@+id/desc_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 Outfit을 설명해보세요"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/desc_et"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#D3D3D3"
            android:hint="오늘의 Outfit을 기록해보세요."
            android:padding="12dp"
            android:textSize="13sp"
            android:gravity="top"/>

        <!-- 태그 -->
        <TextView
            android:id="@+id/tag_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#깔끔한   #편한   #캐주얼"
            android:textSize="13sp"
            android:textColor="#555555"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
